# Backend runtime
PORT=3000
NODE_ENV=production

# Redis
REDIS_URL=redis://127.0.0.1:6379
# If running in docker-compose network, use:
# REDIS_URL=redis://redis:6379
# If Redis requires auth, use:
# REDIS_URL=redis://:your_password@127.0.0.1:6379/0

# Storage paths
STORAGE_DIR=storage
UPLOAD_DIR=storage/uploads
OUTPUT_DIR=storage/outputs

# Limits / worker behavior
MAX_UPLOAD_SIZE_BYTES=2147483648
WORKER_CONCURRENCY=3
FILE_TTL_HOURS=24
